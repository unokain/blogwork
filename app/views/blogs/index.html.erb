
<header class ="home">
  <div class = top>
    <h1 id="titile">Blog_Rails</h1>
    <a id="fly"><%= link_to 'ホーム', blogs_path %></a>   
  </div>
</header>

<h1>あなたのツイート</h1>
  <p><%= notice %></p>
    <table>
      <tr>
        <th>コメント</th>
      </tr>
        <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.content %></td>
        <td><%= link_to '詳細を確認する', blog_path(blog.id) %></td>
        <td><%= link_to 'ツイートを編集する', edit_blog_path(blog.id) %></td>
        <td><%= link_to 'ツイートを削除する', blog_path(blog.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
      </tr>
        <% end %>
    </table>
  <%= link_to '新しくツイートを投稿する', new_blog_path %>
  <footer class="footer">
    <p>Copyright © 2020 株式会社Wing</p>
  </footer>